<%= form_with model: post, local: true do |f| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h4>
      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", placeholder: "Enter post title..." %>
  </div>

  <div class="mb-3">
    <%= f.label :body, class: "form-label" %>
    <%= f.text_area :body, class: "form-control", rows: 10, placeholder: "Write your post content here..." %>
  </div>

  <div class="mb-3">
    <%= f.label :status, class: "form-label" %>
    <%= f.select :status,
        options_for_select([
          ['Draft', 'draft'],
          ['Published', 'published']
        ], post.status),
        {},
        class: "form-select" %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", posts_path, class: "btn btn-secondary" %>
  </div>
<% end %>
