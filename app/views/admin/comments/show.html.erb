<div class="container-fluid py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h2 mb-0">💬 Comment Details</h1>
      <p class="text-muted mb-0">Admin view for comment</p>
    </div>
    <div>
      <%= link_to "🏛️ Dashboard", admin_path, class: "btn btn-outline-secondary me-2" %>
      <%= link_to "📝 All Posts", admin_posts_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <!-- Comment Information -->
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">📋 Comment Information</h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong>Author:</strong> <%= @comment.user.display_name %>
          </div>
          <div class="mb-3">
            <strong>On Post:</strong> <%= link_to @comment.post.title, admin_post_path(@comment.post) %>
          </div>
          <div class="mb-3">
            <strong>Created:</strong> <%= @comment.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            <br><small class="text-muted"><%= time_ago_in_words(@comment.created_at) %> ago</small>
          </div>
          <div class="mb-3">
            <strong>Content:</strong>
            <div class="mt-2 p-3 bg-light rounded">
              <%= @comment.content %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">⚡ Quick Actions</h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <%= link_to "🗑️ Delete Comment", admin_comment_path(@comment),
                data: { 
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure you want to delete this comment?"
                },
                class: "btn btn-outline-danger" %>
            <%= link_to "👤 View Author", admin_user_path(@comment.user),
                class: "btn btn-outline-primary" %>
            <%= link_to "📝 View Post", admin_post_path(@comment.post),
                class: "btn btn-outline-info" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
