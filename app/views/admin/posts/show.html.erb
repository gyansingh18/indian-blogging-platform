<div class="container-fluid py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h2 mb-0">üìù Post Details</h1>
      <p class="text-muted mb-0">Admin view for: <%= @post.title %></p>
    </div>
    <div>
      <%= link_to "üèõÔ∏è Dashboard", admin_path, class: "btn btn-outline-secondary me-2" %>
      <%= link_to "üìù All Posts", admin_posts_path, class: "btn btn-outline-primary me-2" %>
      <%= link_to "üåê Public View", post_path(@post), class: "btn btn-outline-info" %>
    </div>
  </div>

  <!-- Post Information -->
  <div class="row mb-4">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">üìã Post Information</h5>
        </div>
        <div class="card-body">
          <h3><%= @post.title %></h3>
          <div class="mb-3">
            <span class="badge bg-<%= @post.status == 'published' ? 'success' : 'warning' %> me-2">
              <%= @post.status.capitalize %>
            </span>
            <small class="text-muted">
              By <%= @post.user.display_name %> ‚Ä¢
              <%= @post.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            </small>
          </div>
          <div class="post-content">
            <%= simple_format(@post.body) %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">üìä Post Statistics</h5>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-6">
              <div class="bg-info text-white p-3 rounded mb-3">
                <h4><%= @post.comments.count %></h4>
                <p class="mb-0">Comments</p>
              </div>
            </div>
            <div class="col-6">
              <div class="bg-primary text-white p-3 rounded mb-3">
                <h4><%= @post.user.posts.count %></h4>
                <p class="mb-0">Author Posts</p>
              </div>
            </div>
          </div>

          <div class="mt-3">
            <h6>Quick Actions</h6>
            <div class="d-grid gap-2">
              <%= link_to "üóëÔ∏è Delete Post", admin_post_path(@post),
                  data: { 
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure you want to delete this post?"
                  },
                  class: "btn btn-outline-danger btn-sm" %>
              <%= link_to "üë§ View Author", admin_user_path(@post.user),
                  class: "btn btn-outline-primary btn-sm" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Comments Section -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">üí¨ Comments (<%= @post.comments.count %>)</h5>
        </div>
        <div class="card-body">
          <% if @post.comments.any? %>
            <% @post.comments.each do |comment| %>
              <div class="d-flex justify-content-between align-items-start py-3 border-bottom">
                <div class="flex-grow-1">
                  <div class="d-flex align-items-center mb-2">
                    <strong class="me-2"><%= comment.user.display_name %></strong>
                    <small class="text-muted">
                      <%= time_ago_in_words(comment.created_at) %> ago
                    </small>
                  </div>
                  <p class="mb-0"><%= comment.content %></p>
                </div>
                <div>
                  <%= link_to "üóëÔ∏è Delete", admin_comment_path(comment),
                      data: { 
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure you want to delete this comment?"
                      },
                      class: "btn btn-sm btn-outline-danger" %>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-4">
              <h5 class="text-muted">üí¨ No comments yet</h5>
              <p class="text-muted">This post doesn't have any comments.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
