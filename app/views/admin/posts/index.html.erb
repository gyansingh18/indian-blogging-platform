<div class="container-fluid py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h2 mb-0">üìù Manage Posts</h1>
      <p class="text-muted mb-0">Admin control for all blog posts</p>
    </div>
    <div>
      <%= link_to "üèõÔ∏è Dashboard", admin_path, class: "btn btn-outline-secondary me-2" %>
      <%= link_to "üåê View Site", root_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <!-- Statistics -->
  <div class="row mb-4">
    <div class="col-md-3">
      <div class="card bg-primary text-white">
        <div class="card-body text-center">
          <h4><%= @posts.count %></h4>
          <p class="mb-0">Total Posts</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card bg-success text-white">
        <div class="card-body text-center">
          <h4><%= @posts.published.count %></h4>
          <p class="mb-0">Published</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card bg-warning text-white">
        <div class="card-body text-center">
          <h4><%= @posts.drafts.count %></h4>
          <p class="mb-0">Drafts</p>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="card bg-info text-white">
        <div class="card-body text-center">
          <h4><%= @posts.joins(:comments).distinct.count %></h4>
          <p class="mb-0">With Comments</p>
        </div>
      </div>
    </div>
  </div>

  <!-- Posts Table -->
  <div class="card">
    <div class="card-header">
      <h5 class="mb-0">üìã All Posts</h5>
    </div>
    <div class="card-body">
      <% if @posts.any? %>
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Status</th>
                <th>Comments</th>
                <th>Created</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td>
                    <div>
                      <strong><%= post.title %></strong>
                      <% if post.body.length > 100 %>
                        <br><small class="text-muted"><%= truncate(post.body, length: 80) %></small>
                      <% end %>
                    </div>
                  </td>
                  <td>
                    <div>
                      <strong><%= post.user.display_name %></strong>
                      <br><small class="text-muted"><%= post.user.email %></small>
                    </div>
                  </td>
                  <td>
                    <span class="badge bg-<%= post.status == 'published' ? 'success' : 'warning' %>">
                      <%= post.status.capitalize %>
                    </span>
                  </td>
                  <td>
                    <span class="badge bg-info"><%= post.comments.count %></span>
                  </td>
                  <td>
                    <small class="text-muted">
                      <%= post.created_at.strftime("%b %d, %Y") %>
                      <br><%= time_ago_in_words(post.created_at) %> ago
                    </small>
                  </td>
                  <td>
                    <div class="btn-group" role="group">
                      <%= link_to "üëÅÔ∏è View", admin_post_path(post), class: "btn btn-sm btn-outline-primary" %>
                      <%= link_to "üåê Public", post_path(post), class: "btn btn-sm btn-outline-info" %>
                      <%= link_to "üóëÔ∏è Delete", admin_post_path(post),
                          method: :delete,
                          data: { confirm: "Are you sure you want to delete this post?" },
                          class: "btn btn-sm btn-outline-danger" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-5">
          <h4 class="text-muted">üì≠ No posts found</h4>
          <p class="text-muted">There are no posts in the system yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
