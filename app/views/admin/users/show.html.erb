<div class="container-fluid py-4">
  <!-- Header -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h2 mb-0">👤 User Details</h1>
      <p class="text-muted mb-0">Admin view for user: <%= @user.display_name %></p>
    </div>
    <div>
      <%= link_to "🏛️ Dashboard", admin_path, class: "btn btn-outline-secondary me-2" %>
      <%= link_to "👥 All Users", admin_users_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <!-- User Information -->
  <div class="row mb-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">📋 User Information</h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-sm-4">
              <strong>Name:</strong>
            </div>
            <div class="col-sm-8">
              <%= @user.display_name %>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-sm-4">
              <strong>Email:</strong>
            </div>
            <div class="col-sm-8">
              <%= @user.email %>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-sm-4">
              <strong>Joined:</strong>
            </div>
            <div class="col-sm-8">
              <%= @user.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              <br><small class="text-muted"><%= time_ago_in_words(@user.created_at) %> ago</small>
            </div>
          </div>
          <div class="row mt-2">
            <div class="col-sm-4">
              <strong>Last Updated:</strong>
            </div>
            <div class="col-sm-8">
              <%= @user.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">📊 User Statistics</h5>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-6">
              <div class="bg-primary text-white p-3 rounded">
                <h3><%= @user.posts.count %></h3>
                <p class="mb-0">Posts</p>
              </div>
            </div>
            <div class="col-6">
              <div class="bg-info text-white p-3 rounded">
                <h3><%= @user.comments.count %></h3>
                <p class="mb-0">Comments</p>
              </div>
            </div>
          </div>
          <div class="row text-center mt-3">
            <div class="col-6">
              <div class="bg-success text-white p-3 rounded">
                <h3><%= @user.posts.published.count %></h3>
                <p class="mb-0">Published</p>
              </div>
            </div>
            <div class="col-6">
              <div class="bg-warning text-white p-3 rounded">
                <h3><%= @user.posts.drafts.count %></h3>
                <p class="mb-0">Drafts</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- User Posts -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">📝 User Posts (<%= @user_posts.count %>)</h5>
        </div>
        <div class="card-body">
          <% if @user_posts.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-light">
                  <tr>
                    <th>Title</th>
                    <th>Status</th>
                    <th>Comments</th>
                    <th>Created</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @user_posts.each do |post| %>
                    <tr>
                      <td>
                        <strong><%= post.title %></strong>
                        <% if post.body.length > 100 %>
                          <br><small class="text-muted"><%= truncate(post.body, length: 80) %></small>
                        <% end %>
                      </td>
                      <td>
                        <span class="badge bg-<%= post.status == 'published' ? 'success' : 'warning' %>">
                          <%= post.status.capitalize %>
                        </span>
                      </td>
                      <td>
                        <span class="badge bg-info"><%= post.comments.count %></span>
                      </td>
                      <td>
                        <small class="text-muted">
                          <%= post.created_at.strftime("%b %d, %Y") %>
                          <br><%= time_ago_in_words(post.created_at) %> ago
                        </small>
                      </td>
                      <td>
                        <div class="btn-group" role="group">
                          <%= link_to "👁️ View", admin_post_path(post), class: "btn btn-sm btn-outline-primary" %>
                          <%= link_to "🌐 Public", post_path(post), class: "btn btn-sm btn-outline-info" %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-4">
              <h5 class="text-muted">📭 No posts found</h5>
              <p class="text-muted">This user hasn't created any posts yet.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- User Comments -->
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">💬 User Comments (<%= @user_comments.count %>)</h5>
        </div>
        <div class="card-body">
          <% if @user_comments.any? %>
            <% @user_comments.each do |comment| %>
              <div class="d-flex justify-content-between align-items-start py-2 border-bottom">
                <div class="flex-grow-1">
                  <p class="mb-1"><%= comment.content %></p>
                  <small class="text-muted">
                    On "<%= comment.post.title %>" •
                    <%= time_ago_in_words(comment.created_at) %> ago
                  </small>
                </div>
                <div>
                  <%= link_to "🗑️ Delete", admin_comment_path(comment),
                      data: { 
                        turbo_method: :delete,
                        turbo_confirm: "Are you sure you want to delete this comment?"
                      },
                      class: "btn btn-sm btn-outline-danger" %>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-4">
              <h5 class="text-muted">💬 No comments found</h5>
              <p class="text-muted">This user hasn't made any comments yet.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
